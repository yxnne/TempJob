<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--背景-->
    <item android:id="@android:id/background">
        <shape>

            <solid android:color="@color/blockBetweenColor" />          //这个颜色是progressbar的背景颜色
        </shape>
    </item>
    <!--前景-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <solid android:color="@color/colorPrimaryDark" />       //这个颜色是progressbar的进度颜色

            </shape>
        </clip>
    </item>
</layer-list>