<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudColor_lightGrey"
    tools:context="com.iel.swsapp.activity.SettingActivity">
    <!--Start : ActionBar
        通用的二级页面的ActionBar-->
    <RelativeLayout
        android:id="@+id/rl_myactionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:id="@+id/rl_myactionbar_back"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_actionbar_back_click">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/icon_back_to_up"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_myactionbar_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_compliance_rate"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>


        <ImageView
            android:id="@+id/iv_myactionbar_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:src="@drawable/icon_more_menu"/>
    </RelativeLayout>
    <!--end ActionBar MySelf-->
    <ListView
        android:id="@+id/lv_setting_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_myactionbar"
        android:layout_marginTop="12dp"
        />
    <ListView
        android:id="@+id/lv_about_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_setting_setting"
        android:layout_marginTop="12dp"
        />

    <Button
        android:id="@+id/btn_logout_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/myWhite"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/lv_about_setting"
        android:textColor="@android:color/holo_red_light"
        android:text="@string/text_logout"/>
</RelativeLayout>
