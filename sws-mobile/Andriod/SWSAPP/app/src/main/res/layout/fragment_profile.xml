<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/colorPrimary">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_img_profile"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_profile_doctor"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/myWhite"/>
        <TextView
            android:id="@+id/tv_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/civ_img_profile"
            android:text="@string/app_slogan"
            android:textColor="@color/myWhite"
            android:textSize="16sp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/myDivider_hori"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="1dp"
        android:background="@color/colorPrimary_simliar_2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:elevation="2dp">
            <LinearLayout
                android:id="@+id/ll_profile_compliance_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/selector_layout_profile_left_click"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_compliance_rate"
                    android:textColor="@color/myWhite"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_profile_compliance_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="18%"
                    android:textColor="@color/textNormalColor_lighter"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/myDivider_ver"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:elevation="2dp">
            <LinearLayout
                android:id="@+id/ll_profile_department_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_layout_profile_right_click"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_department_rank"
                    android:textColor="@color/myWhite"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_profile_departmant_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="25"
                    android:textColor="@color/textNormalColor_lighter"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ListView
            android:id="@+id/lv_profile_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>